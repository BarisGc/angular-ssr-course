  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  // Uyarı: Production Bundle'larda "sourceMap": false ayarı kapalı olduğu için vscode'da breakpoints kullanarak debug edemezsiniz. Breakpoint'ler için development bundle'ları kullanılmalı.
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ng serve development",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: debug:standard:dev",
      "url": "http://localhost:4200"
    },
    {
      "name": "ng serve production",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: debug:standard:prod",
      "url": "http://localhost:4200"
    },
    {
      "name": "Debug localhost:4200",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "trace": true
    },
    {
      "name": "Debug localhost:4000",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4000",
      "trace": true
    }
  ]
}
